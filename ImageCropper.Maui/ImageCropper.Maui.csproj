<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0-android;net6.0-ios</TargetFrameworks>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">14.2</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>ImageCropper.Maui</Title>
		<Copyright>2022</Copyright>
		<PackageProjectUrl>https://github.com/jbowmanp1107/ImageCropper.Maui</PackageProjectUrl>
	</PropertyGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0-ios'">
    <ProjectReference Include="..\TOCropViewController\TOCropViewController.csproj" />
	</ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net6.0-android'">
    <ProjectReference Include="..\AndroidImageCropper\AndroidImageCropper.csproj" />
    <ProjectReference Include="..\KotlinAndroidExtensionsRuntime\KotlinAndroidExtensionsRuntime.csproj" />
    <ProjectReference Include="..\KotlinParcelizeRuntime\KotlinParcelizeRuntime.csproj" />
  </ItemGroup>
</Project>
